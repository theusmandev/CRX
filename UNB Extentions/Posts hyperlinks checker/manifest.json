{
  "manifest_version": 3,
  "name": "Blogger Link Auditor Pro",
  "version": "1.2",
  "description": "Drive, Instagram, and Facebook link checker for Blogger",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.blogger.com/blog/post/edit/*", "https://www.blogger.com/u/*/blog/post/edit/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://drive.google.com/*"
  ]
}