{
  "manifest_version": 3,
  "name": "Blogger Link Auditor Pro",
  "version": "1.0",
  "description": "Checks Drive, IG, and FB links in Blogger Editor",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Audit Links"
  },
  "content_scripts": [
    {
      "matches": ["https://www.blogger.com/blog/post/edit/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://drive.google.com/*"
  ]
}